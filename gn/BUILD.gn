config("compiler_defaults") {
  if (is_win) {
    cflags = [
      "/O2",
      "/Zi",
      "/Zl",
      "/Zo",
      "/std:c17",
    ]
  } else {
    cflags = [
      "-ffreestanding",
      "-fPIC",
      "-O2",
      "-g",
      "-Wall",
      "-Wextra",
    ]
  }
}

config("executable_ldconfig") {
  if (is_win) {
    ldflags = [
      "/nodefaultlib",
      "/subsystem:console",
      "/debug"
    ]
  } else {
    ldflags = [ "-nostdlib" ]
  }
}
